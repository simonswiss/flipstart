html
  font-size 100%

body
  font-family 'Lato', sans-serif
  font-size 100%
  -webkit-font-smoothing antialiased
  
section
  padding 3rem 0

h1, h2, h3, h4, h5, h6
  font-weight 900
  line-height 1.3

h1
  font-size 4rem

h2
  font-size 2.75rem

h3
  font-size 2.25rem

h4
  font-size 1.5rem

h5
  font-size 1rem

p
  font-size 1.1rem
  color $text-gray

  &.lead
    font-weight 400

  a
    color $primary
    font-weight 900

    &:hover
      text-decoration underline
      color $primary

strong
  font-weight 900